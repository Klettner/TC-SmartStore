{
  "name": "smartstore-server",
  "version": "1.0.0",
  "description": "A web server providing backend functionality to the smartstore web application",
  "author": "Manuel Klettner",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist/* docs/*",
    "clean-node": "rimraf node_modules/*",
    "copy-assets": "ts-node --esm tools/copyAssets",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "format": "tsfmt -r",
    "tsc": "tsc --project tsconfig.json",
    "build": "npm-run-all clean lint format tsc copy-assets",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts,ejs,graphql --ignore routes.ts --exec npm run dev:start",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.3.14",
    "@graphql-tools/utils": "^8.6.13",
    "@types/multer": "^1.4.7",
    "apollo-server-core": "^3.9.0",
    "apollo-server-express": "^3.9.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "graphql": "^16.5.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.9.0",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.4.0",
    "multer": "^1.4.5-lts.1",
    "ncp": "^2.0.0",
    "swagger-ui-express": "^4.4.0",
    "tslog": "^3.3.3",
    "typescript-formatter": "^7.2.2",
    "uuid": "^8.3.2",
    "ws": "^8.8.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.0",
    "@types/shelljs": "^0.8.11",
    "@types/uuid": "^8.3.4",
    "fs-extra": "^10.1.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import-node": "^0.0.5",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "ts-node": "^10.8.1",
    "tslint": "^6.1.3",
    "typedoc": "^0.22.17",
    "typescript": "^4.7.4"
  }
}
