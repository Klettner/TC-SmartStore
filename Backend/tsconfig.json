{
    "compilerOptions": {
		"experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "es2017",
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "node",
            "express"
        ],
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "newLine": "LF",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "typedocOptions": {
        "entryPoints": ["src/server.ts"],
        "out": "docs"
      },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "target": "ES3"
        }
    }
}